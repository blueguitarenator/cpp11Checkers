#include <iostream>
#include <Checkers/Board.h>
#include <Checkers/CheckerTypes.h>
#include <fstream>

using namespace std;

void print(Board& b);

int main() {
	Board b;

	print(b);
	if (b.move(9, Checkers::NE))
	{
		cout << "Moved" << endl;
	}

	int x = 0;
	cin >> x;
	print(b);
	cout << "!!!Goodbye Checkers!!!" << endl; // prints !!!Hello World!!!
	return 0;
}

void print(Board& b)
{
	ofstream myfile;
	myfile.open ("game.txt", ios::out | ios::trunc);
	b.print(myfile);

	myfile.close();

}
