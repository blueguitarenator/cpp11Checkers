#ifndef SQUARE_H_
#define SQUARE_H_

#include <memory>
#include <gtest/gtest_prod.h>

class Checker;

class Square {
public:
	Square(int index);
	virtual ~Square();

	bool isEmpty();
	void setNW(std::shared_ptr<Square> sq){m_nw = sq;}
	void setNE(std::shared_ptr<Square> sq){m_ne = sq;}
	void setSW(std::shared_ptr<Square> sq){m_sw = sq;}
	void setSE(std::shared_ptr<Square> sq){m_se = sq;}
	std::shared_ptr<Square> getNW(){return m_nw;}
	std::shared_ptr<Square> getNE(){return m_ne;}
	std::shared_ptr<Square> getSW(){return m_sw;}
	std::shared_ptr<Square> getSE(){return m_se;}
	void setChecker(std::shared_ptr<Square> checker){m_checker = checker;}
	std::shared_ptr<Checker> getChecker(){return m_checker;}
private:
	int m_index;
	std::shared_ptr<Square> m_checker;

	std::shared_ptr<Square> m_nw;
	std::shared_ptr<Square> m_ne;
	std::shared_ptr<Square> m_sw;
	std::shared_ptr<Square> m_se;
	std::shared_ptr<Checker> m_checker;

	FRIEND_TEST(BoardTest, BoardSquares);

};

#endif /* SQUARE_H_ */
