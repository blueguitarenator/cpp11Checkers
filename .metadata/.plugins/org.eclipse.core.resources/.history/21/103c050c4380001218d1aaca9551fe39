#ifndef SQUARE_H_
#define SQUARE_H_

#include <gtest/gtest_prod.h>

class Square {
public:
	Square(int index);
	virtual ~Square();

	void setNW(Square* sq){m_nw = sq;}
	void setNE(Square* sq){m_ne = sq;}
	void setSW(Square* sq){m_sw = sq;}
	void setSE(Square* sq){m_se = sq;}
private:
	int m_index;
	Square* m_nw;
	Square* m_ne;
	Square* m_sw;
	Square* m_se;

	FRIEND_TEST(BoardTest, BoardSquares);

};

#endif /* SQUARE_H_ */
